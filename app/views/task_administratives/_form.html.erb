
<%= simple_form_for(@task_administrative) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :delivery_date %>
    <%= f.input :task_description %>


    <div>
      <%= f.label :der %>
      <%= f.collection_select(:administrative_process_id, AdministrativeProcess.all, :id, :der, prompt: true) %>
    </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

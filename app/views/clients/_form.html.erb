<%= simple_form_for @client do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :email %>
  <%= f.association :professions,
  label: Profession.model_name.human, as: :check_boxes,
  collection: @professions,
  label_method: :description,
  :multiple => true,
  class: 'chosen-select'
    %>
  <%= f.input :cep %>
  <%= f.input :uf %>
  <%= f.input :city %>
  <%= f.input :neighborhood %>
  <%= f.input :address %>
  <%= f.input :number %>
  <%= f.input :father %>
  <%= f.input :mother %>
  <%= f.input :marital_status %>
  <%= f.input :naturalness %>
  <%= f.input :uf_naturalness %>
  <%= f.input :cpf %>
  <%= f.input :issuing_organ %>
  <%= f.input :document_type %>
  <%= f.input :contact %>
  <%= f.input :scrap_contact %>
  <%= f.input :relationship1 %>
  <%= f.input :relationship2 %>
  <%= f.input :observation %>
  <%= f.input :status, value: true %>
  <%= f.button :submit %>



<% end %>

<%= simple_form_for @client do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :email %>
  <%= f.input :cep %>
  <%= f.input :uf %>
  <%= f.input :city %>
  <%= f.input :neighborhood %>
  <%= f.input :address %>
  <%= f.input :number %>
  <%= f.input :father %>
  <%= f.input :mother %>
  <%= f.input :marital_status %>
  <%= f.input :naturalness %>
  <%= f.input :uf_naturalness %>
  <%= f.input :cpf %>
  <%= f.input :issuing_organ %>
  <%= f.input :document_type %>
  <%= f.input :contact %>
  <%= f.input :scrap_contact %>
  <%= f.input :relationship1 %>
  <%= f.input :relationship2 %>
  <%= f.input :observation %>
  <%= f.input :status %>
  <%= f.button :submit %>

  <% @professions.each do |p| %>
    <%= p.profession_description%>
    <%= check_box_tag "client_profession_attributes[]", p.id, @client.id %>
  <% end %>


<% end %>

<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Status</th>
      <th>Cep</th>
      <th>Uf</th>
      <th>City</th>
      <th>Neighborhood</th>
      <th>Address</th>
      <th>Number</th>
      <th>Father</th>
      <th>Mother</th>
      <th>Marital Status</th>
      <th>Naturalness</th>
      <th>Uf Naturalness</th>
      <th>Cpf</th>
      <th>Issuing Organ</th>
      <th>Document Type</th>
      <th>Contact</th>
      <th>Scrap Contact</th>
      <th>Relationship1</th>
      <th>Relationship2</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.age %></td>
        <td><%= client.email %></td>
        <td><%= client.status %></td>
        <td><%= client.cep %></td>
        <td><%= client.uf %></td>
        <td><%= client.city %></td>
        <td><%= client.neighborhood %></td>
        <td><%= client.address %></td>
        <td><%= client.number %></td>
        <td><%= client.father %></td>
        <td><%= client.mother %></td>
        <td><%= client.marital_status %></td>
        <td><%= client.naturalness %></td>
        <td><%= client.uf_naturalness %></td>
        <td><%= client.cpf %></td>
        <td><%= client.issuing_organ %></td>
        <td><%= client.document_type %></td>
        <td><%= client.contact %></td>
        <td><%= client.scrap_contact %></td>
        <td><%= client.relationship1 %></td>
        <td><%= client.relationship2 %></td>
        <td><%= client.observation %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Client', new_client_path %>
  </br></br>
  <%= current_user.email %>
  </br>
  <%= link_to "Home", root_path %>
  </br>
  <%= link_to "Desconectar", destroy_user_session_path, method: :delete %>
<% end %>
